<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head'); %>
</head>
<body>
    <header>
        <%- include('../../partials/header'); %> 
    </header>
    
    <h1>CLIENTES</h1>
    <a class="btn btn-primary" href="#" style="color: white;">CREAR</a>
    <table class="table" style="width: 1000px; margin-left: auto; margin-right: auto">
        <thead>
          <tr>   
            <th scope="col">Cedula</th>
            <th scope="col">Nombre</th>
            <th scope="col">Telefono</th>
            <th scope="col">Ubicacion</th>
            <th scope="col">Total comprado</th>
            <th scope="col">Historico compras</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
          </tr>
        </thead>
        <tbody>
            <% clients.forEach((cliente) => { %>
            <tr>
              <td><%= cliente.cedula %></td>
              <td><%= cliente.nombre %></td>
              <td><%= cliente.telefono %></td>
              <td><%= cliente.ubicacion %></td>
              <td><%= cliente.total_comprado %></td>
              <td><%= cliente.historico_compras %></td>
              <td><a class="btn btn-warning" href="#">Modificar </a> </td >
              
              <td>
                <form action="#" method="post">
                  <input type="hidden" value="eliminar">
                  <button class="btn btn-danger" type="submit" >Eliminar </button> 
                </form>
              </td>
            </tr>
            <% }); %> 
        </tbody>
        
      </table>
</body>
</html>